<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:title="@string/shareOptions">

    <EditTextPreference android:title="Share Subject"
        android:key="@string/shareTitle"
        android:summary="This is the subject of the message you would like to share"></EditTextPreference>
    <EditTextPreference android:title="Share Text"
        android:key="shareMessage"
        android:defaultValue="I made this."
        android:summary="This is the subject of the message you would like to share"></EditTextPreference>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/renderingOptions">

            <EditTextPreference
                android:title= "Sketchiness"
                android:key="sketchLevel"
                android:defaultValue="50"
                android:summary="Customize the level of sketchiness. Enter a value between 0 and 100"
                android:inputType = "number">

            </EditTextPreference>

        <EditTextPreference
            android:title= "Saturation"
            android:key="saturation"
            android:defaultValue="50"
            android:summary="Customize the level of Saturation. Enter a value between 0 and 255"
            android:inputType = "number">

        </EditTextPreference>



        </PreferenceCategory>

</PreferenceScreen>
